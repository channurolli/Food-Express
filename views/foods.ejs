<% include partials/header %>


<div class="container">
    <header class = "jumbotron">
        <div class = "container">
            <h1>Welcome to our food factory</h1>
            <p>View Hand picked</p>
            <p><a class ="btn btn-primary" href="/foods/new">Add New Food Shops</a></p>
        </div>
    </header>
    
    <div class ="row text-centre" style "display:flex; flex-wrap:wrap">
        <% foods.forEach(function(food) { %>
        <div class ="col-md-3 col-sm-6">
            <div class ="thumbnail">
                <img src ="<%= food.image %>">
                <div class= "caption">
                    <div><h4><%= food.name %></h4></div>
                </div>
            </div>
        </div>
            
        <% }); %>  
    </div> 
</div>


<% include partials/footer %>




